@{
    ViewData["Title"] = "Register Page";
}
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>

<div id="app">
    <template v-if="!userData">
        <h2>Register</h2>
        <form v-on:submit.prevent="login">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" v-model="registerRequest.username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" v-model="registerRequest.password" required>
            </div>
            <button type="submit">Register</button>
        </form>
        <div v-if="errorMessage" class="alert">{{ errorMessage }}</div>
    </template>
</div>
<style>
    body {
        font-family: Arial, sans-serif;
        background: url('/Images/anhdkdn.jpg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        height: 100vh;
    }

    #app {
        background-color: rgba(255, 255, 255, 0.8); /* Độ trong suốt cho khung login */
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 15px; /* Góc bo tròn */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }


    h2 {
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #333;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

    .alert {
        margin-top: 15px;
        padding: 10px;
        background-color: #ff6b6b;
        color: #fff;
        border-radius: 3px;
    }
</style>

<script>
    var app = new Vue({
        el: '#app',
        data: {
            registerRequest: {
                username: '',
                password: ''
            },
            errorMessage: '',
            userData: JSON.parse(localStorage.getItem('userData'))
        },
        methods: {
            login: function () {
                axios.post('/api/auth/register', this.registerRequest)
                    .then(function (response) {
                        localStorage.setItem('username', app.registerRequest.username);
                        localStorage.setItem('userData', JSON.stringify(response.data));
                        window.location.href = 'Index';
                    })
                    .catch(function (error) {
                        console.error(error.response.data);
                        app.errorMessage = error.response.data.error;
                    });
            }
        },
        mounted: function () {
            if (this.userData) {
                window.location.href = 'Index';
            }
        }
    });
</script>